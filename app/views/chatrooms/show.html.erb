<div class="banner7">
  <div class="container">
    <h1><%= @chatroom.name %></h1>
    <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
      <div class="message-container" id="message-<%= message.id %>">
        <i class="author">
          <span><%= message.user.nickname %></span>
          <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </i>
        <p><%= message.content %></p>
      </div>
    <% end %>
    </div>
    <%= simple_form_for [@chatroom, @message] do |f| %>
    <%= f.input :content %><p> - Press enter to send</p>
    <% end %>
    <%= link_to "Back to Messages", chatrooms_path, :class => "btn-prop"%>
  </div>
</div>
