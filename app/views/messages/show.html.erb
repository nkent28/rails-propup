
<div class="banner7">
  <div class="container">
    <h1><%= @message.content %></h1>
    <div id="messages" data-chatroom-id="<%= @message.id %>">

      <div class="message-container" id="message-<%= @message.id %>">
        <i class="author">
          <span><%= @message.user_id %></span>
          <small><%= @message.created_at %></small>
        </i>
        <p><%= @message.content %></p>
      </div>

    </div>
    <%= simple_form_for [@message] do |f| %>
    <%= f.input :content %><p> - Press enter to send</p>
    <% end %>
    <%= link_to "Back to Messages", messages_path, :class => "btn-prop"%>
  </div>
</div>
